<UserControl x:Class="Olf.GoldenHorse.Core.Views.MainShellView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:regions="http://www.codeplex.com/CompositeWPF"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Olf.GoldenHorse.Core.Views;component/../Resources/Icons.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
         <Grid.RowDefinitions>
            <RowDefinition Height="26"></RowDefinition>
            <RowDefinition Height="26"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="26"></RowDefinition>
        </Grid.RowDefinitions>   
        <Menu>
            <MenuItem Header="File">
                <MenuItem Header="New Project" Command="{Binding NewProjectCommand}">
                    <MenuItem.Icon>
                        <Image Source="Images\dachshund.jpg" Width="22" Height="22"></Image>
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
        </Menu>
        <DockPanel Grid.Row="1">
            <ToolBar>
                <ToolBarTray DockPanel.Dock="Top" Height =" 24">
                    <ToolBar Height="24">
                        <Button Height="24" Width="30" Command="{Binding RecordCommand}">
                            <StackPanel Orientation="Horizontal">
                                <Ellipse Width="16" Height="16" >
                                    <Ellipse.Fill>
                                        <LinearGradientBrush>
                                            <GradientStop Color="DarkRed" Offset="0.0"/>
                                            <GradientStop Color="Red" Offset="1.0"/>
                                        </LinearGradientBrush>
                                    </Ellipse.Fill>
                                </Ellipse>
                                
                            </StackPanel>
                        </Button>
                    </ToolBar>
                </ToolBarTray>
            </ToolBar>
        </DockPanel>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"></ColumnDefinition>
                <ColumnDefinition Width="Auto"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <ContentControl Grid.Column="0" regions:RegionManager.RegionName="ProjectExplorerViewRegion"></ContentControl>
            <ContentControl Grid.Column="1" regions:RegionManager.RegionName="WorkspaceViewRegion"></ContentControl>
        </Grid>
        
    </Grid>
</UserControl>
