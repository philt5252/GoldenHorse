<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Olf.GoldenHorse.Core.Views"
             xmlns:regions="http://www.codeplex.com/CompositeWPF"
             x:Class="Olf.GoldenHorse.Core.Views.MainShellView" 
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="26"/>
        </Grid.RowDefinitions>
        <Menu>
            <MenuItem Header="File">
                <MenuItem Header="New Project" Command="{Binding NewProjectCommand}">
                    <MenuItem.Icon>
                        <Image Source="Images\dachshund.jpg" Width="22" Height="22"/>
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
        </Menu>
        <DockPanel Grid.Row="1">
            <ToolBar>
                <ToolBarTray DockPanel.Dock="Top">
                    <ToolBar>
                        <Button Height="26" Width="50" Command="{Binding RecordCommand}">
                            <Ellipse Height="15" Width="15">
                                <Ellipse.Fill>
                                    <LinearGradientBrush EndPoint="0,1" StartPoint="1,1">
                                        <GradientStop Color="DarkRed" Offset="0" />
                                        <GradientStop Color="Red" Offset="1" />
                                    </LinearGradientBrush>
                                </Ellipse.Fill>
                            </Ellipse>
                        </Button>
                    </ToolBar>
                </ToolBarTray>
            </ToolBar>
        </DockPanel>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"></ColumnDefinition>
                <ColumnDefinition Width="600*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <ContentControl Grid.Column="0" Name="projectExplorerCtrl" regions:RegionManager.RegionName="ProjectExplorerViewRegion"></ContentControl>
            <ContentControl Grid.Column="1" Name="workspaceCtrl" regions:RegionManager.RegionName="WorkspaceViewRegion"></ContentControl>
        </Grid>

    </Grid>
</UserControl>
